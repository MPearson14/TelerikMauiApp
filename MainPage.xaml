<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             x:Class="TelerikMauiApp.MainPage"
             xmlns:viewmodels="clr-namespace:TelerikMauiApp.ViewModels"
             x:DataType="viewmodels:MainViewModel"
             x:Name="MainViewPage">

    <ContentPage.Content>
        <Grid BackgroundColor="{AppThemeBinding Light={StaticResource LightModeBackground}, Dark={StaticResource DarkModeBackground}}" Margin="0, 20, 0, 0">
            <VerticalStackLayout>
                <Button
                    x:Name="ComboBtn"
                    Text="Telerik Combox"
                    HorizontalOptions="Center"
                    Command="{Binding ComboButtonCommand}" />
            </VerticalStackLayout>
        </Grid>
    </ContentPage.Content>

</ContentPage>
